.col-md-6.col-md-offset-3
  .panel.panel-default
    .panel-heading
      Merci de confirmer votre pr√©sence avant le
      %strong 01/03/2015.
    .panel-body
      - if @participation.errors.any?
        = render 'errors', errors: @participation.errors
      - if flash[:success]
        = render 'success'
      = form_for [current_user, @participation], class: "form-inline" do |f|
        .form-group
          = f.label :adults, "Nombre d'adultes"
          = f.select :adults, options_for_select((0..5), @participation.adults), class: "form-control"
        .form-group
          = f.label :kids, "Nombre d'enfants"
          = f.select :kids, options_for_select((0..5), @participation.kids), class: "form-control"
        = button_tag type: "submit", class: "btn btn-default" do
          %span.glyphicon.glyphicon-ok
        .pull-right
          = link_to "Je ne viens pas :-(", user_participation_path(current_user, @participation), method: :delete, class: "btn btn-danger"
