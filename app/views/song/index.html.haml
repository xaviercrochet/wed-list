.panel.panel-default
  .form-inline
    = form-for current_user.songs.new do |f|
      .form-group
        = f.text_field :title, placeholder: "Titre", class: "form-control"
      .form-group
        = f.text_field :title, placeholder: "Artiste", class: "form-control"
      .form-group
        = f.text_field :url, placeholder: "Url (Youtube, Spotify, etc)", class: "form-control"
      = f.submit class: "btn btn-primary" do
        %span.glyphicon.glyphicon-plus
