.jumbotron
  %h1 Liste de mariage

= link_to 'Nouveau cadeau', new_gift_path

%table.text-center
  %tr
    %th Titre
    %th Prix
    %th Disponnibilité
    %th
    %th
    %th

  - @gifts.each do |gift|
    %tr
      %td= gift.title
      %td= gift.price
      %td= gift.availability
      %td
        = link_to 'Détails', gift_path(gift)
      %td
        = link_to 'Modifier', edit_gift_path(gift)
      %td
        = link_to 'Supprimer', gift_path(gift), method: :delete, data: { confirm: 'Êtes-vous sûr?' }

%br
  = render 'shared/menu_items'
