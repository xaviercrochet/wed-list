.panel.panel-default
  .panel-heading.text-center
    = @gift.title
  .panel-body
    .row
      .col-md-4.text-center
        = @gift.price
        %span.glyphicon.glyphicon-euro
      .col-md-4.text-center
        - if @gift.available?
          .small
            DisponnibilitÃ©:
            = @gift.availability
        - else
          .red
            Cet article n'est plus disponnible
      .col-md-4.text-center
        = render "transaction_form", gift: @gift

#carousel-example-generic.carousel.slide{"data-ride" => "carousel"}

  .carousel-inner{role: "listbox"}
    - i = 0
    - @gift.gift_images.each do |image|
      - if i == 0
        .item.active
          = image_tag image.photo.url(:medium), style: "margin-left: auto; margin-right: auto"
      -else
        .item
          = image_tag image.photo.url(:medium), style: "margin-left: auto; margin-right: auto"
      - i = i + 1

  %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
