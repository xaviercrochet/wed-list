.panel.panel-default
  .panel-heading.text-center
    = @gift.title
  .panel-body
    .row
      .col-md-4
        .thumbnail
          = image_tag @gift.gift_image.photo.url(:medium)
      .col-md-8
        .caption
          = @gift.description

          = @gift.price
          %span.glyphicon.glyphicon-euro
          - if @gift.available?
            .small
              Disponnibilit√©:
              = @gift.availability
          - else
            .red
              Cet article n'est plus disponnible
%p
  = link_to "Modifier", edit_gift_path(@gift)
