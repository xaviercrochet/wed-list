.panel.panel-default

  %ul.nav.nav-tabs{role: "tablist"}
    %li.active{role: "presentation"}
      %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#unpaid", :role => "tab"}
        Non payées
        %span.badge
          = @orders.unpaid.size
    %li{role: "presentation"}
      %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#paid", :role => "tab"}
        Payées
        %span.badge
          = @orders.paid.unvalidated.size
    %li{role: "presentation"}
      %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#validated", :role => "tab"}
        Validées
        %span.badge
          = @orders.validated.size

  .tab-content
    #unpaid.active.tab-pane{role: "tabpanel"}
      = render 'orders', orders: @orders.unpaid, unpaid: true
    #paid.tab-pane{role: "tabpanel"}
      = render 'orders', orders: @orders.paid.unvalidated, unpaid: false
    #validated.tab-pane{role: "tabpanel"}
      = render 'orders', orders: @orders.validated, unpaid: false
